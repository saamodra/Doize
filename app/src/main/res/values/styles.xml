<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/darkPurple</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:textColor">@color/darkPurple</item>
    </style>

    <style name="FormControl" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">15dp</item>
        <item name="startIconTint">@color/darkPurple</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="FormControlNoOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">15dp</item>
        <item name="startIconTint">@color/darkPurple</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="FormSm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">10dp</item>
        <item name="startIconTint">@color/darkPurple</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FormDialog" parent="Widget.AppCompat.EditText">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="MyDenseOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlinedDense</item>
    </style>

    <style name="MyThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox_dense_h
        </item>
    </style>

    <style name="MyTextInputEditText_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="backgroundTint">@color/purple</item>
    </style>


    <style name="Button.PrimaryOutline" parent="ButtonOutline">
        <item name="backgroundTint">@color/purple</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorBackground">@color/pink</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <item name="colorAccent">@color/pink</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Slide</item>
        <item name="actionMenuTextColor">@color/pink</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>
</resources>